<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron text-center" id="index_header">
        <div calss= "container">
            <h1>Welcome to Camp Guide</h1>
            <p>Here is a list of Camping Grounds In India</p>
            <a class="btn btn-info btn btn-lg" href="/">Back to home page</a>
            <a class="btn btn-info btn btn-lg" href="campgrounds/new">Add a new camping ground</a>
        </div>
    </header>

    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
