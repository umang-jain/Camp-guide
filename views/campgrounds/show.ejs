<% include ../partials/header.ejs %>

<div class="container">
  <div class="row" id='content_main'>
    <div class="col-md-3">
      <p class="lead">Camp Guide</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="img-thumbnail">
        <img src=" <%= campground.image %>" alt="<%= campground.name %>" class="image-responsive">
        <div class="caption-full">
          <h5 class="float-right">$9.00/night</h5>
          <h5><a href="#"><%= campground.name %></a></h5>
          <p><%= campground.description %></p>
        </div>
      </div>
      <div class="card bg-light mb-3">
        <div class="text-right">
          <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-info">Add New Comment</a>
        </div>
        <hr>
        <%   campground.comments.forEach(function(comment){ %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author %></strong>
            <span class="float-right">10 days ago</span>
            <p>
                <%= comment.text %>
            </p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
