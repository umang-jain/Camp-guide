<% include ../partials/form_partials_header.ejs %>
<% include ../partials/navbar.ejs %>

  <div class="main">
      <!-- Sing in  Form -->
      <section class="sign-in">
          <div class="container">
              <div class="signin-content">
                  <div class="signin-image">
                      <figure><img src="/img/signin-image.jpg" alt="sing up image"></figure>
                  </div>

                  <div class="signin-form">
                      <h2 class="form-title" style="text-align:center;">Add Comment to <%= campground.name %></h2>
                      <form method="POST" class="register-form" id="login-form" action="/campgrounds/<%= campground._id %>/comments">
                          <div class="form-group">
                              <label for="text"><i class="zmdi zmdi-labels"></i></label>
                              <input type="text" name="comment[text]" id="text" placeholder="Text of Campground" required/>
                          </div>
                          <div class="form-group form-button">
                              <input type="submit" name="signin" id="signin" class="form-submit"/>
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </section>
  </div>

  <% include ../partials/form_partials_footer.ejs %>
