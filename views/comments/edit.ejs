<% include ../partials/form_partials_header.ejs %>
<% include ../partials/navbar.ejs %>

  <div class="main">
      <!-- Sing in  Form -->
      <section class="signup">
          <div class="container">
              <div class="signup-content">

                  <div class="signup-form">
                      <h2 class="form-title">Edit <%= comment.author.username %>'s comment</h2>
                      <form method="POST" class="register-form" id="register-form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT">
                          <div class="form-group">
                              <label for="text"><i class="zmdi zmdi-labels"></i></label>
                              <input type="text" name="comment[text]" id="text" value="<%= comment.text %>" required/>
                          </div>
                          <div class="form-group form-button">
                              <input type="submit" name="signup" id="signup" class="form-submit" value="Update"/>
                          </div>
                      </form>
                  </div>
                  <div class="signup-image">
                      <figure><img src="/img/signup-image.jpg" alt="sing up image"></figure>
                  </div>
              </div>
          </div>
      </section>
  </div>

  <% include ../partials/form_partials_footer.ejs %>
