<% include ../partials/header.ejs %>


<div class="container">

       <h1 style="text-align:center">Edit <%= comment.author.username %>'s comment'</h1>
       <div style="width:30%; margin:25px auto;">
           <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
              <div class="form-group">
                  <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
              </div>
              <div class="form-group">
                  <button class="btn btn-lg btn-info btn-block">Submit</button>
              </div>
           </form>
           <a class="btn btn-lg btn-info btn-block" href="/campgrounds/<%= campground_id %>">Go back</a>
       </div>
</div>


<% include ../partials/footer.ejs %>
